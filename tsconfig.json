{
  "compilerOptions": {
    "target": "ES2020",               // Modern JS features
    "module": "CommonJS",             // Node-style modules
    "rootDir": "src",                 // Where your TS lives
    "outDir": "dist",                 // Where compiled JS goes
    "strict": true,                   // Type safety = fewer bugs
    "esModuleInterop": true,         // Allows default imports
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}